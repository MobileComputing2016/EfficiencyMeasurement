<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lijingjiang.mobile_sensor_display.SimplePedometerActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/steps"
        android:layout_width="275dp"
        android:layout_height="79dp"
        android:textSize="30sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:weightSum="1"
        android:layout_weight="0.15">
        <TextView
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/result_field"
            android:text="@string/zero"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/unit_meters"
            android:id="@+id/units_text"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/result_field"
            android:textSize="30sp"
            android:layout_weight="0.89" />
    </LinearLayout>

    <TextView
        android:id="@+id/hr"
        android:layout_width="275dp"
        android:layout_height="79dp"
        android:textSize="30sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_weight="0.32">

        <Button
            android:id="@+id/start_button"
            android:layout_width="153dp"
            android:layout_height="105dp"
            android:text="@string/start_exercise"
            android:onClick="startCollection" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="163dp"
            android:layout_height="102dp"
            android:text="@string/stop_exercise"
            android:onClick="stopCollection" />
    </LinearLayout>

</LinearLayout>
